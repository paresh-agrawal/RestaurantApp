<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.paresh.restaurantapp.ContactUs"
    tools:showIn="@layout/activity_contact_us">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="2dp"
            app:cardElevation="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/telephone_rl">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_call_blue"
                        android:layout_centerVertical="true"
                        android:id="@+id/call_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/call_icon"
                        android:text="0712 - 2558772"
                        android:id="@+id/number_telephone"
                        android:textColor="@color/primary_text"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:layout_toRightOf="@+id/call_icon"
                        android:layout_below="@+id/number_telephone"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/telephone_tv"
                        android:text="Telephone"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/telephone_rl"
                    android:id="@+id/divider1"
                    android:layout_marginTop="15dp"
                    android:background="@color/divider"
                    android:layout_marginLeft="44dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider1"
                    android:layout_marginTop="15dp"
                    android:id="@+id/mobile_rl">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_call_blue"
                        android:layout_centerVertical="true"
                        android:id="@+id/call_icon1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/call_icon1"
                        android:text="+91 94231 48446"
                        android:id="@+id/number_mobile"
                        android:textColor="@color/primary_text"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:layout_toRightOf="@+id/call_icon1"
                        android:layout_below="@+id/number_mobile"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/mobile_tv"
                        android:text="Mobile"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/mobile_rl"
                    android:id="@+id/divider2"
                    android:layout_marginTop="15dp"
                    android:background="@color/divider"
                    android:layout_marginLeft="44dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider2"
                    android:layout_marginTop="15dp"
                    android:id="@+id/whatsapp_rl">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_whatsapp"
                        android:layout_centerVertical="true"
                        android:id="@+id/call_icon2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/call_icon2"
                        android:text="+91 94231 48446"
                        android:id="@+id/number_whatsapp"
                        android:textColor="@color/primary_text"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:layout_toRightOf="@+id/call_icon2"
                        android:layout_below="@+id/number_whatsapp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/whatsapp_tv"
                        android:text="Message / Voice Call"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/whatsapp_rl"
                    android:id="@+id/divider3"
                    android:layout_marginTop="15dp"
                    android:background="@color/divider"
                    android:layout_marginLeft="44dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider3"
                    android:layout_marginTop="15dp"
                    android:id="@+id/gmail_rl">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_gmail"
                        android:layout_centerVertical="true"
                        android:id="@+id/call_icon3"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/call_icon3"
                        android:text="anandagrawalakola@gmail.com"
                        android:id="@+id/email_id"
                        android:textColor="@color/primary_text"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:layout_toRightOf="@+id/call_icon3"
                        android:layout_below="@+id/email_id"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/email_id_tv"
                        android:text="Email Id"/>
                </RelativeLayout>

            </RelativeLayout>



        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
